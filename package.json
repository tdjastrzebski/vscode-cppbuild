{
	"name": "vscode-cppbuild",
	"displayName": "Build++",
	"description": "Multi-step incremental build tool, optimized for C/C++",
	"version": "1.3.21",
	"preview": true,
	"icon": "icon.png",
	"publisher": "tdjastrzebski",
	"author": {
		"name": "Tomasz JastrzÄ™bski"
	},
	"license": "MIT",
	"readme": "README.md",
	"keywords": [
		"C",
		"C++",
		"build"
	],
	"categories": [
		"Programming Languages",
		"Other"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/tdjastrzebski/vscode-cppbuild.git"
	},
	"engines": {
		"vscode": "^1.40.0"
	},
	"main": "./out/main.js",
	"activationEvents": [
		"*"
	],
	"contributes": {
		"taskDefinitions": [
			{
				"type": "cppbuild"
			}
		],
		"jsonValidation": [
			{
				"fileMatch": "*build.json",
				"url": "./node_modules/cppbuild/c_cpp_build.schema.json"
			}
		],
		"configuration": {
			"properties": {
				"cppbuild.isEnabled": {
					"type": "boolean",
					"default": true
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w"
	},
	"dependencies": {
		"compare-versions": "^3.6.0",
		"cppbuild": "^1.3.21",
		"semver": "^7.7.3",
		"vsce": "^1.85.0",
		"vscode-cpptools": "^3.1.0"
	},
	"devDependencies": {
		"@types/node": "^18.19.130",
		"@types/semver": "^7.7.1",
		"@types/vscode": "1.40.0",
		"eslint": "^9.39.1",
		"typescript": "^5.9.3",
		"vscode-test": "^1.6.1"
	}
}
